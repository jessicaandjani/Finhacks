<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <!-- Toolbar Text -->
    <style name="ToolbarTextAppearance">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:shadowColor">?colorAccent</item>
    </style>

    <style name="ToolbarTextAppearance.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarTextAppearance.Subtitle">
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Toolbar -->
    <style name="Toolbar">
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <!-- Input Field -->
    <style name="EditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="ActionEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/button_color</item>
        <item name="colorControlActivated">@color/button_color</item>
        <item name="android:textColorHint">@color/secondary_text</item>
    </style>

    <style name="WhiteEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/icons</item>
        <item name="colorControlActivated">@color/icons</item>
        <item name="android:textColorHint">@color/primary_light</item>
    </style>

    <!-- Selected Item -->
    <style name="AppThemeSelectedItem" parent="@android:style/Theme.Holo.Light">
        <item name="android:activatedBackgroundIndicator">@drawable/selected_background</item>
    </style>

</resources>
